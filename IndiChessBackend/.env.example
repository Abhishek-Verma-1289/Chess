# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/indichessdb
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# Google OAuth 2.0 Credentials
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Configuration
# Generate a secure random string (minimum 256 bits)
JWT_SECRET=your_jwt_secret_key_minimum_256_bits_long
JWT_EXPIRATION_MS=86400000

# Application Configuration
SERVER_PORT=8080
FRONTEND_URL=http://localhost:3000

# Spring Profile (development, production)
SPRING_PROFILE=development
